{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": [
      "es2017",
      "dom"
    ],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@angular/*": [
        "node_modules/@angular/*"
      ],
      "@octra/annotation": [
        "libs/annotation/src/index.ts"
      ],
      "@octra/api-types": [
        "../octra-backend/dist/libs/api-types/src/index.ts"
      ],
      "@octra/assets": [
        "libs/assets/src/index.ts"
      ],
      "@octra/components": [
        "libs/components/src/index.ts"
      ],
      "@octra/media": [
        "libs/media/src/index.ts"
      ],
      "@octra/ngx-octra-api": [
        "../octra-backend/dist/libs/ngx-octra-api/src/index.ts"
      ],
      "@octra/utilities": [
        "libs/utilities/src/index.ts"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "tmp"
  ]
}
